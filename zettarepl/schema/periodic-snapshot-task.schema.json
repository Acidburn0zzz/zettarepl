  "$id": "http://freenas.org/zettarepl/periodic-snapshot-task.schema.json",
  "type": "object",
  "properties": {
    "id": {},
    "dataset": {
      "type": "string"
    },
    "recursive": {
      "type": "boolean"
    },
    "exclude": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lifetime": {
      "type": "string"
    },
    "namingSchema": {
      "type": "string"
    },
    "schedule": {
      "$ref": "http://freenas.org/zettarepl/schedule.schema.json"
    }
  },
  "required": ["id", "dataset", "recursive", "lifetime", "namingSchema", "schedule"]
}
