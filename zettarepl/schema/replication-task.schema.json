{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://freenas.org/zettarepl/replication-task.schema.json",
  "type": "object",
  "properties": {
    "id": {},
    "direction": {
      "type": "string",
      "enum": ["push", "pull"]
    },
    "transport": {
      "anyOf": [
        {"$ref": "#/definitions/sshTransport"},
        {"$ref": "#/definitions/sshNetcatTransport"},
        {"$ref": "#/definitions/localTransport"}
      ]
    },
    "sourceDataset": {
      "type": "string"
    },
    "targetDataset": {
      "type": "string"
    },
    "recursive": {
      "type": "boolean"
    },
    "exclude": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "periodicSnapshotTasks": {
      "type": "array",
      "items": {}
    },
    "alsoIncludeNamingSchema": {
      "type": "string"
    },
    "auto": {
      "type": "boolean"
    },
    "schedule": {
      "$ref": "http://freenas.org/zettarepl/schedule.schema.json"
    },
    "restrictSchedule": {
      "$ref": "http://freenas.org/zettarepl/schedule.schema.json"
    },
    "onlyMatchingSchedule": {
      "type": "boolean"
    },
    "allowFromScratch": {
      "type": "boolean"
    },
    "retentionPolicy": {
      "type": "string",
      "enum": ["source", "custom", "none"]
    },
    "lifetime": {
      "type": "string"
    }
  },
  "required": ["id", "direction", "transport", "sourceDataset", "targetDataset", "recursive", "auto", "schedule",
               "retentionPolicy"],
  "definitions": {
    "baseSshTransport": {
      "type": "object",
      "properties": {
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "username": {
          "type": "string"
        },
        "privateKey": {
          "type": "string"
        }
      }
    },
    "sshTransport": {
      "allOf": [
        {
          "$ref": "#/definitions/baseSshTransport"
        },
        {
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "ssh"
              ]
            },
            "cipher": {
              "type": "string",
              "enum": [
                "standard",
                "fast",
                "disabled"
              ]
            }
          }
        }
      ]
    },
    "sshNetcatTransport": {
      "allOf": [
        {
          "$ref": "#/definitions/baseSshTransport"
        },
        {
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "ssh+netcat"
              ]
            },
            "activeSide": {
              "type": "string",
              "enum": [
                "local",
                "remote"
              ]
            },
            "activeSideMinPort": {
              "type": "integer"
            },
            "activeSideMaxPort": {
              "type": "integer"
            }
          }
        }
      ]
    },
    "localTransport": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "local"
          ]
        }
      }
    }
  }
}
